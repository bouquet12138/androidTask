<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--标题样式-->
    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appBarHeight</item>
        <item name="android:background">@color/appBarColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <!--文本样式-->
    <style name="SlideTextStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_main_slide_back</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>
